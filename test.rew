begin theory nat

    <nat> ::= z | s <nat>;
    <add> ::= ( <expr> + <expr> );
    <mul> ::= ( <expr> * <expr> );
    <expr> ::= <nat> | <add> | <mul> | s <expr>;

  numeral notation <nat> z s

  rules

    add_z ( z + <nat> ):
      ( z + ?n ) ==> ?n;

    add_s ( s <nat> + <nat> ):
      ( s ?n + ?m ) ==> s ( ?n + ?m );

    mul_z ( z * <nat> ):
      ( z * ?n ) ==> z;

    mul_s ( s <nat> * <nat> ):
      ( s ?n * ?m ) ==> ( ?m + ( ?n * ?m ) );

end theory

theorem test1 : ( 1 + 1 ) = 2
proof
  lhs: rewrite add_s
  lhs: rewrite add_s
qed

